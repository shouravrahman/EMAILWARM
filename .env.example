# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Aurinko API Configuration (Required for Email Integration)
AURINKO_CLIENT_ID=your_aurinko_client_id
AURINKO_CLIENT_SECRET=your_aurinko_client_secret
AURINKO_WEBHOOK_SECRET=your_aurinko_webhook_secret

# Google Gemini AI Configuration (Required for AI Features)
GEMINI_API_KEY=your_gemini_api_key

# LemonSqueezy Payment Configuration (Required for Payments)
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key
LEMONSQUEEZY_STORE_ID=your_store_id
LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_secret

# LemonSqueezy Product Variant IDs (Required)
LEMONSQUEEZY_STARTER_VARIANT_ID=your_starter_variant_id
LEMONSQUEEZY_STARTER_YEARLY_VARIANT_ID=your_starter_yearly_variant_id
LEMONSQUEEZY_PRO_VARIANT_ID=your_pro_variant_id
LEMONSQUEEZY_PRO_YEARLY_VARIANT_ID=your_pro_yearly_variant_id
LEMONSQUEEZY_ENTERPRISE_VARIANT_ID=your_enterprise_variant_id
LEMONSQUEEZY_ENTERPRISE_YEARLY_VARIANT_ID=your_enterprise_yearly_variant_id

# Application Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Encryption Key for OAuth tokens (32 characters) - CRITICAL FOR SECURITY
ENCRYPTION_KEY=e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6

# SMTP Encryption Key (32 characters) - For encrypting SMTP credentials
SMTP_ENCRYPTION_KEY=your-32-character-encryption-key-here

# Unsubscribe Secret - For generating unsubscribe tokens
UNSUBSCRIBE_SECRET=your-unsubscribe-secret-change-in-production

# Cron Secret - For securing cron endpoints
CRON_SECRET=your-cron-secret-for-vercel-cron-jobs

# SMTP Configuration for System Emails (Required)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_smtp_app_password

# Optional: Error Tracking
SENTRY_DSN=your_sentry_dsn

# Optional: Analytics
GOOGLE_ANALYTICS_ID=your_ga_id

# Development/Production Environment
NODE_ENV=development